<%= notice %>
<% end %>

<h1>users</h1>

<table class='Table'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to "#{user.first_name} #{user.last_name}", edit_user_path(user) %>
          </td>
          <td><%= mail_to user.email %></td>
        </tr>
      <% end %>
    </tbody>
</table>

